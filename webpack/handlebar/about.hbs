<!DOCTYPE HTML>
<html lang="en">

<head>
    {{> components/documentHead documentTitle="Support"}}

</head>

<body class="is-preload">
    <div id="page-wrapper" class="bootstrap-wrapper">
        <header id="header" class="noselect alt">
            <label id="menu-toggle" for="toggle">Menu</label>
            <input type="checkbox" id="toggle">
            <label id="menu" class="noselect" for="toggle">
                <div class="menu-inner">
                    <ul class="links">
                        <li>
                            <a href="{{urlref link.tools}}" title="Translation Tool" target="_blank"
                                rel="noopener noreferrer">Translation Tool</a>
                        </li>
                        <li>
                            <a href="{{urlref kurt.website}}" title="{{kurt.name}}" target="_blank"
                                rel="noopener noreferrer">{{kurt.name}}</a>
                        </li>
                        {{#each assistantApps}}
                        {{#unless @last}}
                        <li>
                            <a href="{{urlref link}}" title="{{title}}" target="_blank"
                                rel="noopener noreferrer">{{title}}</a>
                        </li>
                        {{/unless}}
                        {{/each}}
                    </ul>
                    <label id="menu-toggle-close" for="toggle">X</label>
                </div>
            </label>
        </header>

        <section class="section alternative">
            <div class="container-1180px ta-center noselect">
                <h2>Patreon</h2>
                <h3 style="font-weight: 100;">Special thank you to these amazing people ðŸ’–</h3>
                <br />
                <assistant-apps-patreon-list>
                    <div style="text-align: center;">
                        <img src="/assets/img/loader.svg" height="100px" draggable="false" alt="loading-animation">
                    </div>
                </assistant-apps-patreon-list>
            </div>
        </section>

        <section class="section thank-you">
            <div class="container-1180px">
                <h2 class="ta-center noselect">Team members</h2>
                <div class="container-600px ta-center noselect">
                    <h3 style="font-weight: 100;">Meet the team!</h3>
                </div>
                <br />
                <br />
                <div class="max-w-500px" style="margin: 0 auto">
                    <assistant-apps-team-list>
                        <div style="text-align: center;">
                            <img src="/assets/img/loader.svg" height="100px" draggable="false" alt="loading-animation">
                        </div>
                    </assistant-apps-team-list>
                </div>
            </div>
        </section>


        <hr />

        {{> components/footer }}

    </div>

    {{> components/scripts parallax="true" hcaptcha="true" }}
</body>

</html>