<section class="wrapper spotlight {{sectionclass @index}}">
    <div class="inner">
        <a href="{{urlref link}}" title="{{title}}" target="_blank" rel="noopener noreferrer" class="image">
            <img src="{{image}}" alt="{{title}}" />
        </a>
        <div class="content">
            <h2 class="font-weight-light">
                {{#unless @last}}{{titleStart}}&nbsp;{{/unless}}<span class="font-weight-heavy">{{titleEnd}}</span>
            </h2>
            <p>{{description}}</p>
            {{#each links}}
            <a href="{{urlref url}}" title="{{title}}" target="_blank" rel="noopener noreferrer" class="store-icon">
                <img src="/assets/img/store/{{icon}}.png" alt="{{title}}" />
            </a>
            {{/each}}
        </div>
    </div>
</section>